<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/cat"
    tools:context=".addProduct">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="18dp"
        android:background="@drawable/custom_edittext"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Products"
                android:textSize="36sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/purple"/>

            <EditText
                android:id="@+id/search"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/edittext_bg"
                android:drawableStart="@drawable/search"
                android:drawablePadding="8dp"
                android:ems="10"
                android:hint="Search"
                android:inputType="text"
                android:padding="8dp" />

                <Spinner
                    android:id="@+id/res"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_marginTop="5dp"
                    android:ems="10"
                    android:padding="8dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/id_pro"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:drawablePadding="8dp"
                android:ems="10"
                android:hint="id"
                android:inputType="text"
                android:padding="8dp"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/product"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:drawableStart="@drawable/category"
                android:drawablePadding="8dp"
                android:background="@drawable/edittext_bg"
                android:ems="10"
                android:hint="Product Name"
                android:inputType="text"
                android:padding="8dp" />
        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/quantity"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/edittext_bg"
                    android:ems="10"
                    android:hint="Quantity"
                    android:inputType="text"
                    android:padding="8dp" />


                <EditText
                    android:id="@+id/et_price"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_bg"
                    android:ems="10"
                    android:hint="Price"
                    android:inputType="text"
                    android:padding="8dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_launcher_background" />

                    <Button
                        android:id="@+id/select"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:backgroundTint="@color/purple"
                        android:padding="1dp"
                        android:text="Select Image"
                        android:textSize="12sp"
                        app:cornerRadius="10dp" />
                </LinearLayout>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/description"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="5dp"
                        android:drawablePadding="8dp"
                        android:background="@drawable/edittext_bg"
                        android:ems="10"
                        android:layout_marginLeft="5dp"
                        android:hint="Product Description"
                        android:inputType="textMultiLine"
                        android:padding="16dp"
                        android:minLines="1"
                        android:maxLines="10"
                        android:scrollbars="vertical"


                        />
                </ScrollView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:layout_width="90dp"
                    android:layout_height="55dp"
                    android:id="@+id/create"
                    android:text="Add"
                    android:textSize="15sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="14dp"
                    android:backgroundTint="@color/purple"
                    app:cornerRadius="20dp"/>


                <Button
                    android:layout_width="105dp"
                    android:layout_height="55dp"
                    android:id="@+id/update"
                    android:text="Update"
                    android:textSize="15sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="14dp"
                    android:backgroundTint="@color/purple"
                    app:cornerRadius="20dp"/>

                <Button
                    android:id="@+id/delete"
                    android:layout_width="100dp"
                    android:layout_height="55dp"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/purple"
                    android:text="Delete"
                    android:textSize="15sp"
                    app:cornerRadius="20dp" />

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_margin="18dp"
        android:id="@+id/protab">

        <TableRow
            android:background="@color/green">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="S.N."
                android:textColor="@color/white"
                android:padding="10sp"
                android:textSize="14sp"
                android:layout_weight="4"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textColor="@color/white"
                android:padding="10sp"
                android:textSize="14sp"
                android:layout_weight="4"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textColor="@color/white"
                android:padding="10sp"
                android:textSize="14sp"
                android:layout_weight="4"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Quantity"
                android:textColor="@color/white"
                android:padding="10sp"
                android:textSize="14sp"
                android:layout_weight="4"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Price"
                android:textColor="@color/white"
                android:padding="10sp"
                android:textSize="14sp"
                android:layout_weight="4"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                />

        </TableRow>

        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="row1.S.N"
                android:padding="10sp"
                android:textSize="12sp"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="row1.name"
                android:padding="10sp"
                android:textSize="12sp"
                android:layout_weight="4"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="row1.description"
                android:maxLines="10"
                android:padding="10sp"
                android:textSize="12sp"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"



                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="row1.quantity"
                android:padding="10sp"
                android:textSize="12sp"
                android:layout_weight="4"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="row1.price"
                android:padding="10sp"
                android:textSize="12sp"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                />
        </TableRow>

        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="row2.S.N"
                android:padding="10sp"
                android:textSize="12sp"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="row2.name"
                android:padding="10sp"
                android:textSize="12sp"
                android:layout_weight="4"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="row2.description"
            android:maxLines="10"
            android:padding="10sp"
            android:textSize="12sp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="row2.quantity"

            android:padding="10sp"
            android:textSize="12sp"
            android:layout_weight="4"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="row2.price"
                android:padding="10sp"
                android:textSize="12sp"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                />
        </TableRow>

        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="row3.S.N"
                android:padding="10sp"
                android:textSize="12sp"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="row3.name"
                android:padding="10sp"
                android:textSize="12sp"
                android:layout_weight="4"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="row3.description"
                android:maxLines="10"
                android:padding="10sp"
                android:textSize="12sp"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="row3.quantity"
                android:padding="10sp"
                android:textSize="12sp"
                android:layout_weight="4"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="row3.price"
                android:padding="10sp"
                android:textSize="12sp"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                />
        </TableRow>

    </TableLayout>
    </ScrollView>

</LinearLayout>
