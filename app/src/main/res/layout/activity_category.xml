<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/cat"
    tools:context=".Category">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="18dp"
        android:background="@drawable/custom_edittext"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Category"
                android:id="@+id/et_search_cat"
                android:textSize="36sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/purple"/>


            <EditText
                android:id="@+id/search_cat"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/edittext_bg"
                android:drawableStart="@drawable/search"
                android:drawablePadding="8dp"
                android:ems="10"
                android:hint="Search"
                android:inputType="text"
                android:padding="8dp" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="5dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_launcher_background" />

                <Button
                    android:id="@+id/buttonSelectImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imageView"
                    android:backgroundTint="@color/purple"
                    android:layout_centerHorizontal="true"
                    android:text="Select Image" />

            </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/id_cat"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:drawablePadding="8dp"
                android:ems="10"
                android:hint="id"
                android:inputType="text"
                android:padding="8dp"
                android:textAlignment="center"

                />

            <EditText
                android:id="@+id/et_insert_cat"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:drawableStart="@drawable/category"
                android:drawablePadding="8dp"
                android:background="@drawable/edittext_bg"
                android:ems="10"
                android:hint="Category Name"
                android:inputType="text"
                android:padding="8dp" />

        </LinearLayout>
              <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:layout_width="100dp"
                    android:layout_height="55dp"
                    android:id="@+id/cat_add"
                    android:text="Add"
                    android:textSize="15sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="14dp"
                    android:backgroundTint="@color/purple"
                    app:cornerRadius="20dp"/>


                <Button
                    android:layout_width="110dp"
                    android:layout_height="55dp"
                    android:id="@+id/cat_update"
                    android:text="Update"
                    android:textSize="15sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="14dp"
                    android:backgroundTint="@color/purple"
                    app:cornerRadius="20dp"/>

                <Button
                    android:layout_width="100dp"
                    android:layout_height="55dp"
                    android:id="@+id/cat_delete"
                    android:text="Delete"
                    android:textSize="15sp"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/purple"
                    app:cornerRadius="20dp"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

   >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableLayout
            android:id="@+id/tablecat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="18dp"
            android:background="@color/white">

            <TableRow
                android:background="@color/green">
                <TextView
                    android:id="@+id/cat_tab_id"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:padding="10sp"
                    android:text="ID"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/cat_tab_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="4"
                    android:padding="10sp"
                    android:text="Name"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:padding="10sp"
                    android:text="row1.S.N"
                    android:textAlignment="center"
                    android:textSize="12sp" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="4"
                    android:padding="10sp"
                    android:text="row1.name"
                    android:textAlignment="center"
                    android:textSize="12sp" />
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:padding="10sp"
                    android:text="row2.S.N"
                    android:textAlignment="center"
                    android:textSize="12sp" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="4"
                    android:padding="10sp"
                    android:text="row2.name"
                    android:textAlignment="center"
                    android:textSize="12sp" />
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:padding="10sp"
                    android:text="row3.S.N"
                    android:textAlignment="center"
                    android:textSize="12sp" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="4"
                    android:padding="10sp"
                    android:text="row3.name"
                    android:textAlignment="center"
                    android:textSize="12sp" />
            </TableRow>
          </TableLayout>
    </ScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
<TextView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="15dp"
    android:textSize="15dp"
    android:text="  "/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>